/*这是一个新闻分类
*/
.type{
  width: 100%;
  white-space: nowrap;
  border-bottom: solid 1px;
  border-bottom-color: rgb(122, 113, 113);
}

.type-item{
  font-size: 18px;
  width: rpx;
  display: inline-block;/*块级一行*/
  margin:10rpx 20rpx;
}

.type-red{
  color: #dd6059;
}

.type-none{
}

/*新闻列表样式分类*/
.news{
  padding: 30rpx 30rpx 0rpx 30rpx;
}

.news-tittle{
  font-size: 20px;

}

.publish{
  display: flex;
  flex-direction: row;
  font-size: 14px;
  color: gray;
  margin-top: 10rpx;
  border-bottom: solid 1px;
  border-bottom-color: rgb(141, 126, 126);
}

.publisher{

}

.creat-time{
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}

.img-set{
  display: flex;
  flex-direction: row;
  justify-content: space-between;/*所有子项目平均空白*/
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.cover{
  width: 220rpx;
  height:150rpx;
}

.pic-words{
  display: flex;
  flex-direction: row;
}

.tittle-words{
  width: 500rpx
}